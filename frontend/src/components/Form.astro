---
import "../assets/app.css";
---

<fieldset>
    <legend class="text-lg font-semibold text-[#111827] mb-3">Datos del Perdido</legend>
    <div class="grid grid-cols-2 gap-4">
        <div>
            <label for="name" class="block input text-sm font-medium text-white">Nombre
            <input type="text" id="name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#F59E0B] focus:ring-[#F59E0B] sm:text-sm">
            </label>
        </div>
        <div>
            <label for="phone" class="block input text-sm font-medium text-gray-700">Telefono
                <input type="tel" id="phone" class=" grow mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#F59E0B] focus:ring-[#F59E0B] sm:text-sm"/>
                <span class="badge badge-neutral badge-xs">Optional</span>
            </label>
        </div>
        <div class="col-span-2">
            <label for="description" class="block text-sm font-medium text-gray-700">Descripcion</label>
            <textarea id="description" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#F59E0B] focus:ring-[#F59E0B] sm:text-sm"></textarea>
        </div>
    </div>
</fieldset>